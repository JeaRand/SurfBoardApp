@model IEnumerable<SurfBoardApp.Models.Board>

@{
    ViewData["Title"] = "Index";
}

<h1>Boards</h1>

<div class="board-container">
    @foreach (var row in Model.Select((item, index) => new { Item = item, Index = index }).GroupBy(x => x.Index / 4))
    {
        <div class="board-row">
            @foreach (var item in row.Select(x => x.Item))
            {
                <div class="board-item">
                    <a asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </div>
            }
        </div>
    }
</div>
