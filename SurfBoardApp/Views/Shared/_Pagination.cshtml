@model PaginatedList<SurfBoardApp.Models.Board>

<!-- Pagination component -->
<nav aria-label="Page navigation">
    <ul class="pagination">

        <!-- Previous page button -->
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index"
               asp-route-pageNumber="@(Model.HasPreviousPage ? Model.PageIndex - 1 : 1)"
               asp-route-searchString="@ViewData["SearchString"]">
                &laquo; <!-- « is spelt "&laquo" is a character entity reference in HTML that represents the left-pointing double angle quotation mark («). It is often used as a symbol to indicate previous or back in a navigation context, similar to the use of the right-pointing double angle quotation mark (») to indicate next or forward. -->
            </a>
        </li>

        <!-- Page number buttons -->
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="Index"
               asp-route-pageNumber="@i"
               asp-route-searchString="@ViewData["SearchString"]">
                    @i
                </a>
            </li>
        }

        <!-- Next page button -->
        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index"
               asp-route-pageNumber="@(Model.HasNextPage ? Model.PageIndex + 1 : Model.TotalPages)"
               asp-route-searchString="@ViewData["SearchString"]">
                &raquo; <!--"»" is spelt "&raquo;" is an HTML entity that represents the right double angle quotation mark symbol (»). It is often used as a symbol to indicate a forward or next action, such as in pagination links, where it is used to indicate the "next page" or "next set of results".-->
            </a>
        </li>

    </ul>
</nav>
